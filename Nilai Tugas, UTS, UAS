#include <iostream>
#include <string>

using namespace std;
int main(){
	float tabsen,tugas,uts,uas,hasil,a,b,c,d;
	string sts,exit;

	cout<<"Masukkan Nilai Tabsen : ";
	cin >> tabsen;

	cout<<"Masukkan Nilai Tugas : ";
	cin >> tugas;

	cout<<"Masukkan Nilai UTS : ";
	cin >> uts;

	cout<<"Masukkan Nilai UAS : ";
	cin >> uas;
	
	//set nilai akhir
	a = tabsen * 40/100;
	b = tugas * 10/100;
	c = uts * 20/100;
	d = uas * 30/100;
	
	hasil = a+b+c+d;
	//pengkondisian
	if (hasil >= 50){
		sts = "LULUS";
	}
	else{
		sts = "TIDAK LULUS";
	}
	
	cout<<"Nilai Akhir = "<<hasil<<endl;
	cout<<"Mahasiswa : "<<sts;
	cin>> exit;

	return 0;
}
