#include <iostream>
using namespace std;
main()
{
                typedef struct
                {
                                long int hh;
                                long int mm;
                                long int ss;
                } jam;
    jam j;
                long int TotalDetik;

cout<<"Jam         = "; cin>>j.hh;
cout<<"Menit       = "; cin>>j.mm;
cout<<"Detik       = "; cin>>j.ss;
TotalDetik=(j.hh*3600)+(j.mm*60)+j.ss;
cout<<"Total Detik = "<<TotalDetik<<endl;
}
