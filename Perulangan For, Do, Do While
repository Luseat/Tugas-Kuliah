#include <iostream>

using namespace std;
int main()
{
	cout<<" Nama   : HANIFUDIN ROBBANI"<<endl;
	cout<<" Kelas  : TI.21.C3"<<endl;
	cout<<" Nim    : 312110387"<<endl;
	cout<<endl;
	
	//Printah For
	cout<<"Perintah For"<<endl;
	cout<<""<<endl;
	
	int i;
	for ( i=1; i<=15; i++)
	{
	cout<< i <<" ";
	}cout <<" "<<endl;

	int a;
	for ( a=2; a<=14; a+=2)
	{
	cout<< a <<" "; 
	}cout <<" "<<endl;
	
	int b;
	for ( b=15; b>=0; b-=2 )
	{ 
	cout<<b <<" ";
	}cout<<" "<<endl;
	
	int d;
	for (d=1; d<=10; d++)
	{
	cout<<d*d<<" ";
	}cout<<" "<<endl;
	
	cout<<""<<endl;
	//Perintah While
	cout<<"Perintah While"<<endl;
	cout<<""<<endl;
	
	int e=1;
	while(e<=15)
	{ 
	cout<<e++ <<" ";
	}cout<<""<<endl;
	
	int f=2;
	while(f<=14)
	{
	cout<<f<<" "; f+=2;
	}cout<<""<<endl;
	
	int g=15;
	while(g>=1)
	{
	cout<<g<<" "; g-=2;
	}cout<<" "<<endl;
	
	int h=1;
	while(h<=10)
	{
	cout<<h*h<<" "; h++;
	}cout<<" "<<endl;
	
	cout<<""<<endl;
	//Perintah  Do While
	cout<<"Perintah Do While"<<endl;
	cout<<""<<endl;
	
	int j=1;
	do
	{
	cout<<j<< " ";j++;
	}
	while(j<=15);
	cout<<endl;
	
	int k=2;
	do
	{
	cout<<k<<" "; k+=2;
	}
	while(k<=14);
	cout<<" "<<endl;
	
	int l=15;
	do
	{
	cout<<l<<" "; l-=2;
	}
	while(l>=0);
	cout<<" "<<endl;

	int m=1;
	do{
	cout<<m*m<< " "; m+=1;
	}
	while(m<=10);
	cout<<" "<<endl;
	
	
	system("pause");
	return 0;
}
